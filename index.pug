    link(href='https://fonts.googleapis.com/css?family=Open+Sans:100,300,400,600,700&subset=cyrillic,latin', rel='stylesheet')
    script.
      (function (global) {
        var CONFIG = {
          env: 'development',
          app: 'actp',
          server: '{{server}}',
          dc: '{{dc}}',
          lang: 'en',
          appUrlPrefix: '',
        };
        var TIMING = {
          data: {},
          startTimes: {},
          start: function (tag) {
            this.startTimes[tag] = new Date().getTime();
            return this;
          },
          end: function (tag, startTag) {
            var startTimes = this.startTimes;
            var start = startTimes[tag] || startTimes[startTag];
            if (start) {
              this.data[tag] = new Date().getTime() - start;
            }
            return this;
          },
          toJSON: function () {
            return this.data;
          },
        };
        TIMING.start('page');
        global.CONFIG = CONFIG;
        global.TIMING = TIMING;
      })(this);
